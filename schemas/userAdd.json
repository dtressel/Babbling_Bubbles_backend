{
    "$schema": "https://json-schema.org/draft/2019-09/schema",
    "$id": "http://example.com/example.json",
    "type": "object",
    "default": {},
    "title": "Root Schema",
    "required": [
        "username",
        "email",
        "password"
    ],
    "additionalProperties": false,
    "properties": {
        "username": {
            "type": "string",
            "minLength": 1,
            "maxLength": 30
        },
        "email": {
            "type": "string",
            "pattern": "^\\S+@\\S+\\.\\S+$",
            "format": "email",
            "minLength": 6,
            "maxLength": 150
        },
        "password": {
            "type": "string",
            "minLength": 8
        },
        "firstName": {
            "type": "string",
            "minLength": 1,
            "maxLength": 50
        },
        "lastName": {
            "type": "string",
            "minLength": 1,
            "maxLength": 50
        },
        "country": {
            "type": "string",
            "minLength": 1
        },
        "dateRegistered": {
            "type": "string",
            "format": "date",
            "minLength": 10,
            "maxLength": 10
        },
        "permissions": {
            "type": "string",
            "maxLength": 5
        }
    },
    "examples": [{
        "username": "billybob",
        "email": "billybob@gmail.com",
        "firstName": "Billy",
        "lastName": "Bob",
        "country": "Columbia",
        "dateRegistered": "2023-03-21",
        "permissions": "base"
    }]
}